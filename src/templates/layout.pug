doctype html
html(lang='en' xml:lang='en' xmlns= 'http://www.w3.org/1999/xhtml')
  head
    title Survey Bot
    meta(name='google' content='notranslate')
    meta(http-equiv="Content-Language" content='en')
    link(href='/static/stylesheets/index.css' type='text/css' rel='stylesheet')
    link(href='/bower/components-font-awesome/css/font-awesome.min.css' type='text/css' rel='stylesheet')
    script(src='/bower/jquery/dist/jquery.min.js')
    script(src='/bower/vue/dist/vue.min.js')
    script(src='/static/javascripts/index.js')

  body
    header.main-header.top-bar
      a.brand.top-bar-left(href='/')
        img.cisco(src='/static/images/cisco.png')
        span.spark Spark
        h1  Survey Bot

      if currentUser
        .current-user.top-bar-right
          img.avatar(src=currentUser.profile.avatar width=32 height=32)
          span.name= currentUser.profile.displayName
          span.logout
            a(href='/auth/logout') Logout

    .row: .small-12.small-centered.medium-10.large-8.columns
      section.content-box
        block content
